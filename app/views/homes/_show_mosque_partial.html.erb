<div class="con-class">
    <h4 class="row justify-content-md-center custom-content-class"> 
        <span class="text-decoration-none text-primary fs-6 text-center navbar-brand"> <%= @home.full_name %> </span>
    </h4>
    <p class="row justify-content-md-center" style="text-transform: capitalize;"> 
        <table style="padding-top: 0;">
            <tr>
                <th class="table-text-align-right">
                    <strong> Address </strong>
                </th>
                <td class="table-text-align-left">
                    <%= @home.address.capitalize %>
                </td>
            </tr>
            <tr>
                <th class="table-text-align-right">
                    <strong> Contact No </strong>
                </th>
                <td class="table-text-align-left">
                    <%= @home.contact_no %>
                </td>
            </tr>
            <tr>
                <th class="table-text-align-right">
                    <strong> Mutawalli </strong>
                </th>
                <td class="table-text-align-left">
                    <%= @home.manager.capitalize %>
                </td>
            </tr>
            <tr>
                <th class="table-text-align-right">
                    <strong> Latitude </strong>
                </th>
                <td class="table-text-align-left">
                    <%= @home.latitude %>
                </td>
            </tr>
            <tr>
                <th class="table-text-align-right">
                    <strong> Longitude </strong>
                </th>
                <td class="table-text-align-left">
                    <%= @home.longitude %>
                </td>
            </tr>
            <tr>
                <th class="table-text-align-right">
                    <strong> Category </strong>
                </th>
                <td class="table-text-align-left">
                    <%= @home.category.capitalize %>
                </td>
            </tr>
            <tr>
                <th class="table-text-align-right">
                    <strong> Email </strong>
                </th>
                <td class="table-text-align-left">
                    <%= @home.email %>
                </td>
            </tr>
            <tr>
                <th class="table-text-align-right">
                    <strong> Imam </strong>
                </th>
                <td class="table-text-align-left">
                    <%= @home.imam.capitalize %>
                </td>
            </tr>
            <tr>
                <th class="table-text-align-right">
                    <strong> Whatsapp </strong>
                </th>
                <td class="table-text-align-left">
                    <%= @home.whatsapp %>
                </td>
            </tr>
            <tr>
                <th class="table-text-align-right">
                    <strong> Address </strong>
                </th>
                <td class="table-text-align-left">
                    <% if @location&.address.present? %>
                        <%= @location&.address + " " + @location&.postal_code.to_s %>
                    <% end %>
                </td>
            </tr>
        </table>
    </p>
</div>