<div class="container">
  <div class="row justify-content-md-around" style="padding-top: 10px;">
    <div class="col">
      <h1>Privacy policies</h1>
      <% if @privacy_policies.any? %>
        <ul>
          <% @privacy_policies.each do |data| %>
            <h3> <%= data.title %> </h3>
            <p><%= raw(data.description) %></p>
          <% end %>
        </ul>
      <% else %>
        <p>No privacy policies found.</p>
      <% end %>
    </div>
  </div>
</div>
