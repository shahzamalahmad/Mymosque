<h1>Accounts</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Role</th>
      <th>Approved</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.email %></td>
        <td><%= account.role.name if account.role %></td>
        <td><%= account.approved? ? "Yes" : "No" %></td>
        <td>
          <%= link_to 'Show', account %> |
          <%= link_to 'Edit', edit_account_path(account) %> |
          <%= link_to 'Delete', account, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Account', new_account_path %>
