<div class="container">
  <div class="row justify-content-md-around" style="padding-top: 10px;">
    <div class="col col-lg-3 custom-class ">
      <div class="container">
        <h2 class="row justify-content-md-center custom-content-heading-class">
          Forgot your password?
        </h2>
        <div class="row justify-content-md-around" style="padding-bottom: 15px;">
          <div class="col col-lg-3">
            <div class="overflow-class">
              <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
                <%= render "devise/shared/error_messages", resource: resource %>

                <div class="field">
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %><br><br>
                </div>

                <div class="actions">
                  <%= f.submit "Send me reset password instructions" %>
                </div>
              <% end %>

              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
