<div class="container">
  <div class="row justify-content-md-around" style="padding-top: 10px;">
    <div class="col col-lg-3 custom-class ">
      <div class="container">
        <h1 class="row justify-content-md-center custom-content-heading-class">
          Log in
        </h1>
        <div class="row justify-content-md-around" style="padding-bottom: 15px;">
          <div class="col col-lg-3">
            <div class="overflow-class">
              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="field">
                  <%#= f.label :email %>
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %><br><br>
                </div>

                <div class="field">
                  <%#= f.label :password %>
                  <%= f.password_field :password_confirmation, autocomplete: "current-password", placeholder: "current-password" %><br><br>
                </div>

                <% if devise_mapping.rememberable? %>
                  <div class="field">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                  </div>
                <% end %>

                <div class="actions">
                  <%= f.submit "Log in" %>
                </div>
              <% end %>

              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>





